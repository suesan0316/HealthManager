<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HealthManager.ViewModel"
             xmlns:b="clr-namespace:HealthManager.Extention"
             x:Class="HealthManager.View.HomeView">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>
<ScrollView>
    <StackLayout VerticalOptions="FillAndExpand">
            <Button Text="体の写真を登録" Command="{Binding RegistBodyImageCommand}"></Button>
        <Image Source="{Binding BodyImage}"></Image>
            <Label Text="{Binding BodyImageRegistedDateString}"></Label>

            <Label Text="名前" />
            <Label Text="{Binding Name}" />
            <Label Text="性別" />
            <Label Text="年齢" />
            <Label Text="{Binding Age}" />
            <Label Text="身長(cm)" />
            <Label Text="{Binding Height}" />
            <Label Text="体重(kg)" />
            <Label Text="{Binding BodyWeight}"  />
            <Label Text="BMI" />
            <Label Text="{Binding Bmi}"/>
            <Label Text ="体脂肪率"></Label>
            <Label Text="{Binding BodyFatPercentage}" ></Label>
            <Label Text="血圧" />
            <StackLayout Orientation="Horizontal">
                <Label WidthRequest="100" Text="{Binding MaxBloodPressure} "  />
                <Label Text="/"  VerticalOptions="End"/>
                <Label Text="{Binding MinBloodPressure}"  />
            </StackLayout>
            <Label Text ="基礎代謝"></Label>
            <Label Text="{Binding BasalMetabolism}" ></Label>
            <Button Text="基本データを更新" Command="{Binding RegistBasicDataCommand}"></Button>
        <Button Text="体脂肪率遷移" Command="{Binding ViewDataChartCommand}"></Button>

            <ActivityIndicator IsRunning="{Binding IsLoading}" />

        <ListView ItemsSource="{Binding Items}">
        <ListView.Behaviors>
            <b:ItemTappedBehavior Command="{Binding ItemTappedCommand}"/>
        </ListView.Behaviors>
    </ListView>
    </StackLayout>
</ScrollView>
</ContentPage>