<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthManager.View.TrainingMasterView">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView x:Name="ControlScroll">
                <StackLayout Margin="30">
                    <StackLayout x:Name="ErrorStack" />
                    <Label Text="{Binding TrainingNameLabel}" Style="{StaticResource ColumnLabelStyle}"  />
                    <Entry Placeholder="{Binding NamePlaceholderLabel}" Text="{Binding TrainingName}"
                           IsEnabled="{Binding IsDisable}" />
                    <Label Text="{Binding TrainingPartLabel}" Style="{StaticResource ColumnLabelStyle}"></Label>
                    <StackLayout x:Name="PartStack" />
                    <Button Style="{StaticResource EventButtonStyle}" Text="{Binding AddPartButtonLabel}" Command="{Binding AddPartStackCommand}" />
                    <Button Style="{StaticResource NegativeEventButtonStyle}" Text="{Binding DeletePartButtonLabel}" Command="{Binding DeletePartStackCommand}" />
                    <Label Text="{Binding TrainingLoadLabel}" Style="{StaticResource ColumnLabelStyle}"></Label>
                    <StackLayout x:Name="LoadStack" />
                    <Button Style="{StaticResource EventButtonStyle}" Text="{Binding AddLoadButtonLabel}" Command="{Binding AddLoadStackCommand}" />
                    <Button Style="{StaticResource NegativeEventButtonStyle}" Text="{Binding DeleteLoadButtonLabel}" Command="{Binding DeleteLoadStackCommand}" />
                    <Label HorizontalOptions="Center" Text="{Binding LoadingLabel}" IsVisible="{Binding IsLoading}" Style="{StaticResource ColumnLabelStyle}" />
                    <ActivityIndicator IsRunning="{Binding IsLoading}" />
                    <Button IsEnabled="{Binding IsDisable}" Text="{Binding SaveButtonLabel}"
                            Command="{Binding SaveTrainingMasterCommand}" Style="{StaticResource NormalButtonStyle}" />
                    <Button Text="{Binding CancelButtonLabel}" Command="{Binding CancleCommand}"
                            IsVisible="{Binding CancelButtonIsVisible}" Style="{StaticResource ReturnButtonStyle}" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>