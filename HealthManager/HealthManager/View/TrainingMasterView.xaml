<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HealthManager.ViewModel"
             x:Class="HealthManager.View.TrainingMasterView">
    <ContentPage.BindingContext>
        <vm:TrainingMasterViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Label Text="{Binding TrainingNameLabel}" />
            <Entry Placeholder="{Binding NamePlaceholderLabel}" Text="{Binding TrainingName}" IsEnabled="{Binding IsDisable}" />
            <Picker ItemsSource="{Binding PartItemSrouce}" ItemDisplayBinding="{Binding PartName}"  SelectedItem="{Binding Part}" IsEnabled="{Binding IsDisable}" ></Picker>
            <Picker ItemsSource="{Binding SubPartItemSrouce}"  ItemDisplayBinding="{Binding SubPartName}"  SelectedItem="{Binding SubPart}"  IsEnabled="{Binding IsDisable}"></Picker>
            <Picker ItemsSource="{Binding LoadItemSrouce}"  ItemDisplayBinding="{Binding LoadName}"  SelectedItem="{Binding Load}"  IsEnabled="{Binding IsDisable}"></Picker>
            <Label HorizontalOptions="Center" Text="{Binding LoadingLabel}" IsVisible="{Binding IsLoading}" />
            <ActivityIndicator IsRunning="{Binding IsLoading}" />
            <Button IsEnabled="{Binding IsDisable}" Text="{Binding SaveButtonLabel}" Command="{Binding SaveTrainingMasterCommand}"  Style="{StaticResource NormalButtonStyle}"/>
            <Button Text="{Binding CancelButtonLabel}" Command="{Binding CancleCommand}" IsVisible="{Binding CancelButtonIsVisible}" Style="{StaticResource NormalButtonStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>